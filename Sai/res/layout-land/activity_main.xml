<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_with_logo"
    android:orientation="horizontal"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:gravity="bottom"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:layout_weight="60" >

        <Button
            android:id="@+id/bAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_audio"
            android:layout_weight="20" />

        <Button
            android:id="@+id/bVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_video"
            android:layout_weight="20" />

        <Button
            android:id="@+id/bPhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_photos"
            android:layout_weight="20" />

    </LinearLayout>

</LinearLayout>